<Window x:Class="Quizes2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizes2"
        mc:Ignorable="d"
        Title="Тест" Height="450" Width="800">
    <Grid Margin="20">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >

            <Button Name="SelectFileBtn" Margin="0 10" Height="40"
                    Content="Выбрать файл теста" Click="SelectFileBtn_Click"/>

            <Button Name="StartBtn" Margin="0 10" Height="40"
                    Content="Начать тест" IsEnabled="False"
                    Click="StartBtn_Click"/>

            <TextBlock Name="FileLabel" Text="Файл не выбран" 
                       HorizontalAlignment="Center" Margin="0 20 0 0"/>
        </StackPanel>

    </Grid>
</Window>

