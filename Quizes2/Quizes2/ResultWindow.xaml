<Window x:Class="Quizes2.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizes2"
        mc:Ignorable="d"
        Title="Результат" Width="600" Height="500">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>






        <!-- Текст -->
        <!-- 3D сцена -->






        <!-- Текст -->
        <StackPanel Margin="20"
                    IsHitTestVisible="False"
                    >
            <TextBlock x:Name="TitleText"
                       FontSize="24" FontWeight="Bold"
                       TextWrapping="Wrap" Margin="0 0 0 10"/>

            <TextBlock x:Name="ScoreText"
                       FontSize="18"
                       TextWrapping="Wrap" Margin="0 0 0 10"/>

            <TextBlock x:Name="ResultText"
                       FontSize="18"
                       TextWrapping="Wrap"/>
        </StackPanel>
        <Viewport3D Grid.Column="1" x:Name="Viewport">

            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,4"
                                   LookDirection="0,0,-4"
                                   UpDirection="0,1,0"
                                   FieldOfView="45" />
            </Viewport3D.Camera>

            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-1,-1,-2"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <ModelVisual3D x:Name="CubeContainer">
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="CubeModel"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

        </Viewport3D>

        <!-- 3D сцена -->

    </Grid>
</Window>
