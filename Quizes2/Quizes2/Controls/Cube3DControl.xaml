<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Quizes2.Controls.Cube3DControl"
             Width="400" Height="400" MinWidth="200" MinHeight="200" Background="{x:Null}">

    <Viewport3D x:Name="View"
                ClipToBounds="True"
                MouseDown="Viewport_MouseDown"
                MouseUp="Viewport_MouseUp"
                MouseMove="Viewport_MouseMove"
                MouseWheel="Viewport_MouseWheel"
                >

        <!-- Камера -->
        <Viewport3D.Camera>
            <PerspectiveCamera x:Name="Cam"
                                Position="0,0,4"
                                LookDirection="0,0,-4"
                               UpDirection="0,1,0"
                               FieldOfView="45"/>
        </Viewport3D.Camera>

        <!-- Свет -->
        <ModelVisual3D x:Name="CubeContainer">
            <ModelVisual3D.Transform>
                <Transform3DGroup>

                    <RotateTransform3D>
                        <RotateTransform3D.Rotation>
                            <AxisAngleRotation3D x:Name="RotX" Axis="1,0,0" Angle="0"/>
                        </RotateTransform3D.Rotation>
                    </RotateTransform3D>

                    <RotateTransform3D>
                        <RotateTransform3D.Rotation>
                            <AxisAngleRotation3D x:Name="RotY" Axis="0,1,0" Angle="0"/>
                        </RotateTransform3D.Rotation>
                    </RotateTransform3D>

                </Transform3DGroup>
            </ModelVisual3D.Transform>

            <ModelVisual3D.Content>
                <Model3DGroup x:Name="CubeModel"/>
            </ModelVisual3D.Content>
        </ModelVisual3D>

        <!-- Свет -->
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <AmbientLight Color="White"/>
            </ModelVisual3D.Content>
        </ModelVisual3D>

        <!-- Контейнер с вращениями -->

    </Viewport3D>
</UserControl>
