<UserControl x:Class="Quizes2.Controls.Cube3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="400" Background="Transparent">

    <Grid Background="Transparent">
        <Viewport3D x:Name="View"
                    ClipToBounds="True"
                    MouseDown="Viewport_MouseDown"
                    MouseUp="Viewport_MouseUp"
                    MouseMove="Viewport_MouseMove"
                    MouseWheel="Viewport_MouseWheel">

            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="Cam"
                                   Position="0,0.5,4"
                                   LookDirection="0,-0.5,-4"
                                   UpDirection="0,1,0"
                                   FieldOfView="45" />
            </Viewport3D.Camera>

            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-1,-1,-2"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <ModelVisual3D x:Name="CubeContainer">
                <ModelVisual3D.Transform>
                    <Transform3DGroup>
                        <RotateTransform3D>
                            <RotateTransform3D.Rotation>
                                <AxisAngleRotation3D x:Name="RotX"
                                                     Axis="1,0,0"
                                                     Angle="0"/>
                            </RotateTransform3D.Rotation>
                        </RotateTransform3D>

                        <RotateTransform3D>
                            <RotateTransform3D.Rotation>
                                <AxisAngleRotation3D x:Name="RotY"
                                                     Axis="0,1,0"
                                                     Angle="0"/>
                            </RotateTransform3D.Rotation>
                        </RotateTransform3D>
                    </Transform3DGroup>
                </ModelVisual3D.Transform>

                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="CubeModel"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

        </Viewport3D>
    </Grid>
</UserControl>
